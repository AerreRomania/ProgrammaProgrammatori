                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>

                <dxg:GridColumn
                    ColumnHeaderContentStyle="{StaticResource ColumnHeaderStyle}"
                    EditFormVisible="False"
                    FieldName="Febbraio"
                    Fixed="Left"
                    Header="Febbraio   %"
                    HeaderStyle="{StaticResource BaseHeaderStyle}"
                    HorizontalHeaderContentAlignment="Center"
                    ReadOnly="True">
                    <dxg:GridColumn.EditSettings>
                        <dxe:TextEditSettings HorizontalContentAlignment="Center" DisplayFormat="N1" />
                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>
                <dxg:GridColumn
                    ColumnHeaderContentStyle="{StaticResource ColumnHeaderStyle}"
                    FieldName="Marzo"
                    Fixed="Left"
                    Header="Marzo   %"
                    HeaderStyle="{StaticResource BaseHeaderStyle}"
                    HorizontalHeaderContentAlignment="Center"
                    ReadOnly="True">
                    <dxg:GridColumn.EditSettings>
                        <dxe:TextEditSettings HorizontalContentAlignment="Center" DisplayFormat="N1" />
                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>

                <dxg:GridColumn
                    ColumnHeaderContentStyle="{StaticResource ColumnHeaderStyle}"
                    FieldName="Aprile"
                    Fixed="Left"
                    Header="Aprile   %"
                    HeaderStyle="{StaticResource BaseHeaderStyle}"
                    HorizontalHeaderContentAlignment="Center"
                    ReadOnly="True">
                    <dxg:GridColumn.EditSettings>
                        <dxe:TextEditSettings HorizontalContentAlignment="Center" DisplayFormat="N1" />
                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>
                <dxg:GridColumn
                    ColumnHeaderContentStyle="{StaticResource ColumnHeaderStyle}"
                    FieldName="Maggio"
                    Fixed="Left"
                    Header="Maggio   %"
                    HeaderStyle="{StaticResource BaseHeaderStyle}"
                    HorizontalHeaderContentAlignment="Center"
                    ReadOnly="True">
                    <dxg:GridColumn.EditSettings>
                        <dxe:TextEditSettings HorizontalContentAlignment="Center" DisplayFormat="N1" />
