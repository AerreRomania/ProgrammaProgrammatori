    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviours="clr-namespace:PP.WPF.Behaviors"
    xmlns:converters="clr-namespace:PP.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:dxscht="http://schemas.devexpress.com/winfx/2008/xaml/scheduling/themekeys"
    xmlns:dxschv="http://schemas.devexpress.com/winfx/2008/xaml/scheduling/visual"
    xmlns:editGridForm="clr-namespace:PP.WPF.Views.EditGridForm"
    xmlns:local="clr-namespace:PP.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scheduling="http://schemas.devexpress.com/winfx/2008/xaml/scheduling"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="LegendLabels" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="10" />
            <Setter Property="Margin" Value="0,0,20,0" />
        </Style>

        <Style x:Key="ColumnHeaderStyle" TargetType="ContentControl">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Foreground" Value="WhiteSmoke" />
        </Style>

        <Style x:Key="BaseHeaderStyle" TargetType="dxg:BaseGridHeader">
            <Setter Property="dxg:BaseGridColumnHeader.ShowFilterButtonOnHover" Value="False" />
            <Setter Property="Background" Value="#323232" />
        </Style>

        <converters:BooleanToIntegerConverter x:Key="BoolToIntConverter" />

    </UserControl.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <WrapPanel Margin="4" HorizontalAlignment="Center">
                <TextBlock Text="Prototipo " />
                <Label Background="#32CD32" Style="{StaticResource LegendLabels}" />
                <TextBlock Text="Campionario " />
                <Label Background="#FFFF33" Style="{StaticResource LegendLabels}" />
                <TextBlock Text="Preproduzione " />
                <Label Background="#D3A0DD" Style="{StaticResource LegendLabels}" />
                <TextBlock Text="Svillupo Taglie " />
                <Label Background="#00BFFF" Style="{StaticResource LegendLabels}" />
                <TextBlock Text="Schede Tehnice " />
                <Label Background="#87CEFA" Style="{StaticResource LegendLabels}" />
                <TextBlock Text="Riparazione/Ass.Rep. " />
                <Label Background="#FF3333" Style="{StaticResource LegendLabels}" />
                <TextBlock Text="Prove tecniche " />
                <Label Background="#CD5C5C" Style="{StaticResource LegendLabels}" />
                <TextBlock Text="Vacanza " />
                <Label Background="#A9A9A9" Style="{StaticResource LegendLabels}" />
            </WrapPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="5" />
                <RowDefinition Height="*" />
                <RowDefinition Height="5" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
            </Grid.ColumnDefinitions>
            <scheduling:SchedulerControl
                Name="programmersTimelineControl"
                Grid.Row="1"
                Grid.Column="1"
                AllowAppointmentConflicts="False"
                AllowAppointmentCopy="False"
                AllowInplaceEditor="False"
                AppointmentEdited="ProgrammersTimelineControl_OnAppointmentEdited"
                AppointmentRemoved="ProgrammersTimelineControl_OnAppointmentRemoved"
                DropAppointment="ProgrammersTimelineControl_OnDropAppointment"
                FirstDayOfWeek="Monday"
                GroupType="Resource"
                ResizeAppointmentOver="ProgrammersTimelineControl_OnResizeAppointmentOver"
                ShowBorder="True"
                StartAppointmentDragFromOutside="programmersTimelineControl_StartAppointmentDragFromOutside"
                WorkDays="Monday,Tuesday,Wednesday,Thursday,Friday,Saturday"
                WorkTime="08:00:00-18:00:00">

                <scheduling:SchedulerControl.OptionsWindows>
                    <scheduling:OptionsWindows AppointmentWindowType="{x:Type local:EditTaskFormView}" />
                </scheduling:SchedulerControl.OptionsWindows>
                <scheduling:SchedulerControl.ResourceColors>
                    <Color>#e0e0e0</Color>

                </scheduling:SchedulerControl.ResourceColors>

                <dxmvvm:Interaction.Behaviors>
                    <dxmvvm:EventToCommand Command="{Binding SaveTaskCommand}" EventName="AppointmentAdded" />
                    <dxmvvm:EventToCommand Command="{Binding ChangeTaskCommand}" EventName="AppointmentEdited" />
                    <dxmvvm:EventToCommand Command="{Binding DeleteTaskCommand}" EventName="AppointmentRemoved" />
                </dxmvvm:Interaction.Behaviors>

                <scheduling:SchedulerControl.OptionsContextMenu>
                    <scheduling:OptionsContextMenu>
                        <scheduling:OptionsContextMenu.TimeRulerContextMenu>
                            <dxb:PopupMenu />
                        </scheduling:OptionsContextMenu.TimeRulerContextMenu>
                        <scheduling:OptionsContextMenu.CellContextMenu>
                            <dxb:PopupMenu>
                                <!--<dxb:BarButtonItem
                                    x:Name="Cell_NewAppointment"
                                    Content="Create New Task"
                                    Style="{DynamicResource {dxscht:SchedulerCommandBarThemeKey ResourceKey=Items_Home_Appointment_NewAppointment}}" />-->
                                <dxb:BarItemLinkSeparator />
                                <dxb:BarButtonItem x:Name="Cell_GotoToday" Style="{DynamicResource {dxscht:SchedulerCommandBarThemeKey ResourceKey=Items_Home_Navigate_GotoToday}}" />
                                <dxb:BarButtonItem x:Name="Cell_GotoDate" Style="{DynamicResource {dxscht:SchedulerCommandBarThemeKey ResourceKey=Items_Home_Navigate_GotoDate}}" />
                                <dxb:BarItemLinkSeparator />
                            </dxb:PopupMenu>
                        </scheduling:OptionsContextMenu.CellContextMenu>
                        <scheduling:OptionsContextMenu.AppointmentContextMenu>
                            <dxb:PopupMenu>
                                <dxb:BarButtonItem
                                    x:Name="Appointment_Open"
                                    Content="Edit Task"
                                    Style="{DynamicResource {dxscht:SchedulerCommandBarThemeKey ResourceKey=Items_Appointment_Actions_Open}}" />
                                <dxb:BarSubItem
                                    x:Name="Appointment_ShowTimeAs"
                                    Content="Task Status"
                                    Style="{DynamicResource {dxscht:SchedulerCommandBarThemeKey ResourceKey=Items_Appointment_Options_ShowTimeAs}}" />

                                <dxb:BarSubItem
                                    x:Name="Appointment_LabelAs"
                                    Content="Set Job Type"
                                    Style="{DynamicResource {dxscht:SchedulerCommandBarThemeKey ResourceKey=Items_Appointment_Options_LabelAs}}" />
                                <dxb:BarItemLinkSeparator />
                                <dxb:BarButtonItem
                                    x:Name="Appointment_Delete"
                                    Content="Delete Task"
                                    Style="{DynamicResource {dxscht:SchedulerCommandBarThemeKey ResourceKey=Items_Appointment_Actions_Delete}}" />
                            </dxb:PopupMenu>
                        </scheduling:OptionsContextMenu.AppointmentContextMenu>
                    </scheduling:OptionsContextMenu>
                </scheduling:SchedulerControl.OptionsContextMenu>

                <scheduling:TimelineView x:Name="TimelineView" MoreButtonsVisibility="Never">

                    <scheduling:TimelineView.TimeScales>
                        <scheduling:TimeScaleWorkDay x:Name="scaleWorkDay" IsEnabled="True" />
                        <!--<scheduling:TimeScaleWorkHour x:Name="scaleWorkHour" IsEnabled="True" />-->
                    </scheduling:TimelineView.TimeScales>

                    <scheduling:TimelineView.ResourceHeaderStyle>
                        <Style TargetType="dxschv:ResourceHeaderControl">
                            <Setter Property="ContentOrientation" Value="Horizontal" />
                            <Setter Property="Background" Value="#323232" />
                            <Setter Property="BorderBrush" Value="LightGray" />
                            <Setter Property="BorderThickness" Value="4" />

                            <Setter Property="Foreground" Value="#e0e0e0" />
                            <Setter Property="Height" Value="41" />
                        </Style>
                    </scheduling:TimelineView.ResourceHeaderStyle>

                </scheduling:TimelineView>

                <scheduling:SchedulerControl.DataSource>
                    <scheduling:DataSource
                        AppointmentLabelsSource="{Binding Labels}"
                        AppointmentStatusesSource="{Binding Statuses}"
                        AppointmentsSource="{Binding ProgrammerTasks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        ResourcesSource="{Binding KnittingProgrammers}">
                        <scheduling:DataSource.AppointmentLabelMappings>
                            <scheduling:AppointmentLabelMappings
                                Caption="JobTypeName"
                                Id="JobTypeID"
                                Color="Color" />
                        </scheduling:DataSource.AppointmentLabelMappings>
                        <scheduling:DataSource.AppointmentStatusMappings>
                            <scheduling:AppointmentStatusMappings
                                Brush="StatusBrush"
                                Caption="Caption"
                                Id="Id" />
                        </scheduling:DataSource.AppointmentStatusMappings>
                        <scheduling:DataSource.AppointmentMappings>
                            <scheduling:AppointmentMappings
                                Description="Note"
                                End="EndTask"
                                Id="ProgrammerTaskID"
                                LabelId="JobTypeID"
                                ResourceId="ProgrammerID"
                                Start="StartTask"
                                StatusId="{scheduling:Mapping FieldName=TaskCompleted,
                                                              ConversionBehavior=BetweenFieldAndMapping,
                                                              Converter={StaticResource BoolToIntConverter}}"
                                Subject="ArticleTitle">
                                <scheduling:CustomFieldMapping Name="ArticleID" Mapping="ArticleID" />
                            </scheduling:AppointmentMappings>
                        </scheduling:DataSource.AppointmentMappings>
                        <scheduling:DataSource.ResourceMappings>
                            <scheduling:ResourceMappings Caption="Angajat" Id="Id" />
                        </scheduling:DataSource.ResourceMappings>
                    </scheduling:DataSource>
                </scheduling:SchedulerControl.DataSource>
            </scheduling:SchedulerControl>
